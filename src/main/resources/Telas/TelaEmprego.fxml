<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane style="-fx-background-color: linear-gradient(to bottom, #e8f1ff, #ffffff); -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Atividade2.Controllers.TelaEmpregoController">

    <VBox alignment="TOP_CENTER" prefWidth="550" spacing="18">

        <StackPane>
            <children>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2342c2" height="41.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
                <Label text="CLASSE EMPREGO" textFill="WHITE">
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
            </children>
        </StackPane>

        <VBox alignment="CENTER_LEFT" spacing="14" style="-fx-background-color: #ffffff; -fx-background-radius: 12;                      -fx-padding: 20 25; -fx-effect: dropshadow(gaussian, #00000033, 10, 0, 0, 2);">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefHeight="25.0" prefWidth="90.0" text="EMPRESA:">
                    <font><Font name="System Bold" size="16" /></font>
                </Label>
                <TextField fx:id="txtEmpresa" prefHeight="25.0" prefWidth="350.0" promptText="Ex: Microsoft" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefHeight="25.0" prefWidth="90.0" text="CARGO:">
                    <font><Font name="System Bold" size="16" /></font>
                </Label>
                <TextField fx:id="txtCargo" prefHeight="25.0" prefWidth="350.0" promptText="Ex: Gerente" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefHeight="25.0" prefWidth="90.0" text="SALÁRIO:">
                    <font><Font name="System Bold" size="16" /></font>
                </Label>
                <TextField fx:id="txtSalario" prefHeight="25.0" prefWidth="350.0" promptText="Ex: 1500" />
            </HBox>

        </VBox>

        <Button onAction="#onSalvar" style="-fx-background-color: #4a90e2; -fx-text-fill: white;                        -fx-font-size: 16px; -fx-font-weight: bold;                        -fx-background-radius: 10; -fx-padding: 8 25;" text="SALVAR" />

        <Label fx:id="mensagemLabel" style="-fx-font-size: 14px;" />

        <!-- Botão VOLTAR -->
        <Button onAction="#onVoltar" style="-fx-background-color: #999; -fx-text-fill: white;                        -fx-background-radius: 10; -fx-font-size: 14px;                        -fx-padding: 6 20;" text="VOLTAR" />

    </VBox>
</StackPane>
