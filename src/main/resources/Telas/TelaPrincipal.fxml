<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f2f2f2); -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Atividade2.Controllers.TelaPrincipalController">

    <VBox alignment="TOP_CENTER" spacing="30">

        <!-- =======================
             CABEÇALHO
        ======================== -->
        <StackPane prefHeight="80" prefWidth="500">
            <children>
                <Rectangle arcHeight="15" arcWidth="15" fill="#2829b0" height="65" stroke="#7a1b1b" strokeWidth="1.2" width="420" StackPane.alignment="CENTER" />

                <Label text="MÚSICA: CORRA - DJONGA" textFill="white" StackPane.alignment="CENTER">
                    <font>
                        <Font name="Arial Bold" size="20" />
                    </font>
                </Label>
            </children>
        </StackPane>

        <!-- =======================
             CONTEÚDO PRINCIPAL
        ======================== -->
        <VBox alignment="TOP_CENTER" prefWidth="500" spacing="18" style="-fx-background-color: white;                      -fx-padding: 20 30;                      -fx-background-radius: 12;                      -fx-effect: dropshadow(gaussian, #00000033, 12, 0, 0, 3);">

            <Label text="SELECIONE A CLASSE QUE DESEJA ADICIONAR DADOS:">
                <font><Font name="System Bold" size="17" /></font>
            </Label>

            <!-- ====== Povo ====== -->
            <Label text="POVO">
                <font><Font name="System Bold" size="15" /></font>
            </Label>

            <Button fx:id="btnPovo" onAction="#onPovoClick" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 8 25; -fx-font-weight: bold; -fx-font-size: 13;" text="CLIQUE AQUI" />

            <!-- ====== Emprego ====== -->
            <Label style="-fx-padding: 10 0 0 0;" text="EMPREGO">
                <font><Font name="System Bold" size="15" /></font>
            </Label>

            <Button fx:id="btnEmprego" onAction="#onEmpregoClick" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 8 25; -fx-font-weight: bold; -fx-font-size: 13;" text="CLIQUE AQUI" />

            <!-- ====== Dinheiro ====== -->
            <Label style="-fx-padding: 10 0 0 0;" text="DINHEIRO">
                <font><Font name="System Bold" size="15" /></font>
            </Label>

            <Button fx:id="btnDinheiro" onAction="#onDinheiroClick" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 8 25; -fx-font-weight: bold; -fx-font-size: 13;" text="CLIQUE AQUI" />

        </VBox>

    </VBox>

</StackPane>
